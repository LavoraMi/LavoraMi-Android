<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_app"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_app"
        android:paddingTop="40dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/archivo_medium"
            android:text="@string/lavoriInCorso"
            android:textColor="@color/text_primary"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.7" />

        <ImageButton
            android:id="@+id/buttonRefresh"
            android:layout_width="30dp"
            android:layout_height="27dp"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView"
            app:srcCompat="@drawable/ic_refresh" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/editSearch"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/background_app"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawablePadding="10dp"
        android:hint="Cerca linea (es. S5, RE8)..."
        android:paddingStart="15dp"
        android:textColor="@android:color/white"
        android:textColorHint="#666666"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/headerLayout" />

    <HorizontalScrollView
        android:id="@+id/filterScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/editSearch">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/filterChipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:selectionRequired="false"
            app:singleLine="true"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAll"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tutti"
                android:textColor="@color/text_primary"
                app:chipBackgroundColor="@color/selector_chip_filter"
                app:chipIcon="@drawable/ic_filters"
                app:chipIconVisible="true"
                app:chipIconTint="@color/text_primary"
                app:chipIconSize="15dp"
                app:iconStartPadding="10dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipBus"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bus"
                android:textColor="@color/text_primary"
                app:chipBackgroundColor="@color/selector_chip_filter"
                app:chipIcon="@drawable/ic_bus"
                app:chipIconVisible="true"
                app:chipIconTint="@color/text_primary"
                app:chipIconSize="15dp"
                app:iconStartPadding="10dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipTram"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tram"
                android:textColor="@color/text_primary"
                app:chipBackgroundColor="@color/selector_chip_filter"
                app:chipIcon="@drawable/ic_tram"
                app:chipIconVisible="true"
                app:chipIconTint="@color/text_primary"
                app:chipIconSize="15dp"
                app:iconStartPadding="10dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipMetro"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Metropolitana"
                android:textColor="@color/text_primary"
                app:chipBackgroundColor="@color/selector_chip_filter"
                app:chipIcon="@drawable/ic_metro"
                app:chipIconVisible="true"
                app:chipIconTint="@color/text_primary"
                app:chipIconSize="15dp"
                app:iconStartPadding="10dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipTreno"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Treno"
                android:textColor="@color/text_primary"
                app:chipBackgroundColor="@color/selector_chip_filter"
                app:chipIcon="@drawable/ic_train"
                app:chipIconVisible="true"
                app:chipIconTint="@color/text_primary"
                app:chipIconSize="15dp"
                app:iconStartPadding="10dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipInCorso"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In Corso"
                android:textColor="@color/text_primary"
                app:chipBackgroundColor="@color/selector_chip_filter"
                app:chipIcon="@drawable/ic_incorso"
                app:chipIconVisible="true"
                app:chipIconTint="@color/text_primary"
                app:chipIconSize="15dp"
                app:iconStartPadding="10dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipProgrammati"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Programmati"
                android:textColor="@color/text_primary"
                app:chipBackgroundColor="@color/selector_chip_filter"
                app:chipIcon="@drawable/ic_calendar"
                app:chipIconVisible="true"
                app:chipIconTint="@color/text_primary"
                app:chipIconSize="15dp"
                app:iconStartPadding="10dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipATM"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="di ATM"
                android:textColor="@color/text_primary"
                app:chipBackgroundColor="@color/selector_chip_filter" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipTrenord"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="di Trenord"
                android:textColor="@color/text_primary"
                app:chipBackgroundColor="@color/selector_chip_filter" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipMovibus"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="di Movibus"
                android:textColor="@color/text_primary"
                app:chipBackgroundColor="@color/selector_chip_filter" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipStav"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="di STAV"
                android:textColor="@color/text_primary"
                app:chipBackgroundColor="@color/selector_chip_filter" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAutoguidovie"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="di Autoguidovie"
                android:textColor="@color/text_primary"
                app:chipBackgroundColor="@color/selector_chip_filter" />

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/emptyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nessuna corrispondenza trovata."
        android:textSize="18sp"
        android:textColor="@color/text_primary"
        android:fontFamily="@font/archivo_medium"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/recyclerView"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingHorizontal="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/customBottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filterScroll" />

    <LinearLayout
        android:id="@+id/loadingLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout"
        app:layout_constraintBottom_toTopOf="@+id/customBottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminate="true"
            android:indeterminateTint="#FD272D"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Caricamento in corso..."
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:fontFamily="@font/archivo_medium"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/errorNetwork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout"
        app:layout_constraintBottom_toTopOf="@+id/customBottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="88dp"
            android:layout_height="59dp"
            app:srcCompat="@drawable/ic_wifi_slash"
            app:tint="@color/text_primary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Impossibile caricare i dati dal server."
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:fontFamily="@font/archivo_medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="Controlla la tua connessione e riprova."
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:fontFamily="@font/archivo_medium"/>

        <Button
            android:id="@+id/btnRefreshOnError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/redMetro"
            android:layout_marginTop="10dp"
            android:text="Riprova"
            app:icon="@drawable/ic_refresh"
            app:iconPadding="10dp"
            app:iconGravity="textStart"
            app:iconTint="@color/White"
            android:textColor="@color/White"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/customBottomBar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/background_app"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_home"
            app:tint="#FD272D" />

        <ImageButton
            android:id="@+id/linesButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_lines"
            app:tint="?attr/colorControlNormal" />

        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_setting"
            app:tint="?attr/colorControlNormal" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>