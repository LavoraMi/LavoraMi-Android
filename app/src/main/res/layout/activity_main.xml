<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_app"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/background_app"
        android:paddingTop="40dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/archivo_medium"
            android:text="@string/lavoriInCorso"
            android:textColor="@color/text_primary"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.7" />

        <ImageButton
            android:id="@+id/buttonRefresh"
            android:layout_width="30dp"
            android:layout_height="27dp"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView"
            app:srcCompat="@drawable/ic_refresh"
            app:tint="@color/redMetro" />

        <ProgressBar
            android:id="@+id/progressBarRefresh"
            android:layout_width="42dp"
            android:layout_height="29dp"
            android:layout_marginTop="12dp"
            android:indeterminate="true"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@+id/buttonRefresh"
            app:layout_constraintHorizontal_bias="0.795"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible"
            android:indeterminateTint="@color/redMetro"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/strikeBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/disclosureBg"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_info"
                app:tint="@color/text_primary" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/strikeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/archivo_medium"
                    android:text="AVVISO SCIOPERO"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/strikeDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/archivo_medium"
                    android:text="Sciopero proclamato il date."
                    android:textColor="@color/text_primary"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/strikeGuaranteed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/archivo_medium"
                    android:text="Le fasce di garantite (06:00 - 09:00, 18:00 - 21:00) value."
                    android:textColor="@color/text_primary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/strikeCompanies"
                    android:layout_width="291dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/archivo_medium"
                    android:text="ADERENTI: Trenord, ATM, Movibus"
                    android:textAlignment="center"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/closeBtn"
                    android:layout_width="291dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/archivo_medium"
                    android:text="X Chiudi"
                    android:textAlignment="center"
                    android:textColor="@color/RE"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <EditText
        android:id="@+id/editSearch"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/background_app"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawablePadding="10dp"
        android:hint="Cerca linea (es. S5, RE8)..."
        android:inputType="text"
        android:paddingStart="15dp"
        android:textColor="@android:color/white"
        android:textColorHint="#666666"
        app:layout_constraintTop_toBottomOf="@id/strikeBanner" />

    <HorizontalScrollView
        android:id="@+id/filterScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/editSearch">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/filterChipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:selectionRequired="false"
            app:singleLine="true"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAll"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tutti"
                android:textColor="@color/text_primary"
                app:chipBackgroundColor="@color/selector_chip_filter"
                app:chipIcon="@drawable/ic_filters"
                app:chipIconSize="15dp"
                app:chipIconTint="@color/text_primary"
                app:chipIconVisible="true"
                app:iconStartPadding="10dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipBus"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bus"
                android:textColor="@color/text_primary"
                app:chipBackgroundColor="@color/selector_chip_filter"
                app:chipIcon="@drawable/ic_bus"
                app:chipIconSize="15dp"
                app:chipIconTint="@color/text_primary"
                app:chipIconVisible="true"
                app:iconStartPadding="10dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipTram"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tram"
                android:textColor="@color/text_primary"
                app:chipBackgroundColor="@color/selector_chip_filter"
                app:chipIcon="@drawable/ic_tram"
                app:chipIconSize="15dp"
                app:chipIconTint="@color/text_primary"
                app:chipIconVisible="true"
                app:iconStartPadding="10dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipMetro"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Metropolitana"
                android:textColor="@color/text_primary"
                app:chipBackgroundColor="@color/selector_chip_filter"
                app:chipIcon="@drawable/ic_metro"
                app:chipIconSize="15dp"
                app:chipIconTint="@color/text_primary"
                app:chipIconVisible="true"
                app:iconStartPadding="10dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipTreno"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Treno"
                android:textColor="@color/text_primary"
                app:chipBackgroundColor="@color/selector_chip_filter"
                app:chipIcon="@drawable/ic_train"
                app:chipIconSize="15dp"
                app:chipIconTint="@color/text_primary"
                app:chipIconVisible="true"
                app:iconStartPadding="10dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipInCorso"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In Corso"
                android:textColor="@color/text_primary"
                app:chipBackgroundColor="@color/selector_chip_filter"
                app:chipIcon="@drawable/ic_incorso"
                app:chipIconSize="15dp"
                app:chipIconTint="@color/text_primary"
                app:chipIconVisible="true"
                app:iconStartPadding="10dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipProgrammati"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Programmati"
                android:textColor="@color/text_primary"
                app:chipBackgroundColor="@color/selector_chip_filter"
                app:chipIcon="@drawable/ic_calendar"
                app:chipIconSize="15dp"
                app:chipIconTint="@color/text_primary"
                app:chipIconVisible="true"
                app:iconStartPadding="10dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipATM"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="di ATM"
                android:textColor="@color/text_primary"
                app:chipBackgroundColor="@color/selector_chip_filter" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipTrenord"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="di Trenord"
                android:textColor="@color/text_primary"
                app:chipBackgroundColor="@color/selector_chip_filter" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipMovibus"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="di Movibus"
                android:textColor="@color/text_primary"
                app:chipBackgroundColor="@color/selector_chip_filter" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipStav"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="di STAV"
                android:textColor="@color/text_primary"
                app:chipBackgroundColor="@color/selector_chip_filter" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAutoguidovie"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="di Autoguidovie"
                android:textColor="@color/text_primary"
                app:chipBackgroundColor="@color/selector_chip_filter" />

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/emptyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/archivo_medium"
        android:text="Nessun lavoro trovato per il filtro selezionato."
        android:textColor="@color/text_primary"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/recyclerView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingHorizontal="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/customBottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filterScroll" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/loadingLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/customBottomBar"
        app:layout_constraintTop_toBottomOf="@+id/filterScroll"
        app:shimmer_auto_start="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <include layout="@layout/item_lavoro" />
            <include layout="@layout/item_lavoro" />
            <include layout="@layout/item_lavoro" />
            <include layout="@layout/item_lavoro" />
        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <LinearLayout
        android:id="@+id/errorNetwork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/customBottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="88dp"
            android:layout_height="59dp"
            app:srcCompat="@drawable/ic_wifi_slash"
            app:tint="@color/text_primary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/archivo_medium"
            android:text="Impossibile caricare i dati dal server."
            android:textColor="@color/text_primary"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/archivo_medium"
            android:text="Controlla la tua connessione e riprova."
            android:textColor="@color/text_primary"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnRefreshOnError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/redMetro"
            android:text="Riprova"
            android:textColor="@color/White"
            app:icon="@drawable/ic_refresh"
            app:iconGravity="textStart"
            app:iconPadding="10dp"
            app:iconTint="@color/White" />

        <TextView
            android:id="@+id/errorDeps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/archivo_medium"
            android:text="_message"
            android:textColor="@color/text_primary"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/customBottomBar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/background_app"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_home"
            app:tint="#FD272D" />

        <ImageButton
            android:id="@+id/linesButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_lines"
            app:tint="?attr/colorControlNormal" />

        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_setting"
            app:tint="?attr/colorControlNormal" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/setupOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_app"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        tools:visibility="gone">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/setupViewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/setupActionContainer"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/setupIndicator"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginBottom="24dp"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toTopOf="@+id/setupActionContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tabBackground="@drawable/selector_dot_indicator"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp"
            app:tabMaxWidth="24dp"
            app:tabMinWidth="24dp"
            app:tabMode="fixed"
            app:tabPaddingBottom="0dp"
            app:tabPaddingEnd="8dp"
            app:tabPaddingStart="8dp"
            app:tabPaddingTop="0dp"
            app:tabRippleColor="@android:color/transparent" />

        <LinearLayout
            android:id="@+id/setupActionContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSetupNext"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:backgroundTint="#FD272D"
                android:fontFamily="@font/archivo_medium"
                android:text="Avanti"
                android:textAllCaps="false"
                android:textColor="@color/White"
                android:textSize="18sp"
                app:cornerRadius="12dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnSetupSkip"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="16dp"
            android:text="Salta"
            android:textColor="#FD272D"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>