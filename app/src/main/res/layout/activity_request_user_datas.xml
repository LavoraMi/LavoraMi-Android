<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:background="@color/background_app"
    tools:context=".RequestUserDatas">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="58dp"
            android:layout_height="43dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="10dp"
            android:background="@color/background_app"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back_arrow"
            app:tint="?attr/colorControlNormal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/archivo_medium"
            android:text="Aiuto"
            android:textColor="@color/text_primary"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBar">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/login_view_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="24dp"
                android:paddingTop="40dp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/titleImage"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:src="@drawable/ic_user_datas"
                        app:tint="@color/redMetro"
                        android:scaleType="fitCenter"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/archivo_medium"
                        android:text="Richiedi i tuoi Dati"
                        android:textColor="@color/text_primary"
                        android:textSize="34sp"
                        android:layout_marginStart="10dp"
                        android:textStyle="bold"
                        android:layout_marginEnd="12dp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="32dp"
                    android:fontFamily="@font/archivo_medium"
                    android:text="Invia una richiesta al nostro Team per scaricare i tuoi dati."
                    android:textColor="#8E8E93"
                    android:textSize="14sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/disclosureBg"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/desc"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:paddingHorizontal="16dp">

                        <ImageView
                            android:id="@+id/descImage"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_file"
                            app:tint="@color/redMetro"
                            android:visibility="visible"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="36dp"
                            android:text="Formato del File:"
                            android:textColor="@color/text_primary"
                            android:textSize="17sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/JSON"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:paddingHorizontal="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:text="Json"
                            android:textColor="@color/text_primary"
                            android:textSize="17sp" />

                        <ImageView
                            android:id="@+id/checkedJSON"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/check"
                            app:tint="@color/text_primary"
                            android:visibility="visible"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginStart="60dp"
                        android:background="#38383A" />

                    <RelativeLayout
                        android:id="@+id/HTML"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:paddingHorizontal="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:text="HTML"
                            android:textColor="@color/text_primary"
                            android:textSize="17sp" />
                        <ImageView
                            android:id="@+id/checkedHTML"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/check"
                            app:tint="@color/text_primary"
                            android:visibility="gone"/>
                    </RelativeLayout>
                </LinearLayout>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/infoFiles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/archivo_medium"
                    android:text="Seleziona il formato in cui i tuoi dati verrano esportati."
                    android:textColor="#8E8E93"
                    android:textSize="14sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/disclosureBg"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_mail"
                            app:tint="@color/redMetro"/>

                        <EditText
                            android:id="@+id/etEmailAccount"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="12dp"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/archivo_medium"
                            android:hint="Email del tuo Account"
                            android:inputType="textEmailAddress"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#8E8E93" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/resetSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="-8dp"
                    android:fontFamily="@font/archivo_medium"
                    android:text="L'Invio dei dati richiesti puÃ² impiegare dai 5 ai 20 giorni lavorativi. Controlla la mail entro questo limite."
                    android:textColor="#8E8E93"
                    android:textSize="14sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnRequestDatas"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="32dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/GRAY"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingHorizontal="16dp">

                        <ImageView
                            android:id="@+id/imgButton"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_send"
                            android:layout_marginEnd="12dp"
                            app:tint="@color/White"
                            android:visibility="visible" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/archivo_medium"
                            android:text="Richiedi Dati"
                            android:textColor="@color/White"
                            android:textSize="18sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </FrameLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>