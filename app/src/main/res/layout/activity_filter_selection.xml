                            app:tint="@color/text_primary"
                            android:visibility="gone"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginStart="60dp"
                        android:background="#38383A" />

                    <RelativeLayout
