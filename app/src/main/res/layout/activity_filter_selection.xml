                        android:background="#38383A" />

                    <RelativeLayout
                        android:id="@+id/diTrenord"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:paddingHorizontal="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:text="di Trenord"
                            android:textColor="@color/text_primary"
                            android:textSize="17sp" />

                        <ImageView
                            android:id="@+id/checkdiTrenord"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/check"
                            app:tint="@color/text_primary"
                            android:visibility="gone"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginStart="60dp"
                        android:background="#38383A" />

                    <RelativeLayout
                        android:id="@+id/diMovibus"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:paddingHorizontal="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:text="di Movibus"
                            android:textColor="@color/text_primary"
                            android:textSize="17sp" />

                        <ImageView
                            android:id="@+id/checkdiMovibus"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/check"
                            app:tint="@color/text_primary"
                            android:visibility="gone"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginStart="60dp"
                        android:background="#38383A" />

                    <RelativeLayout
                        android:id="@+id/diSTAV"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:paddingHorizontal="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:text="di STAV"
                            android:textColor="@color/text_primary"
                            android:textSize="17sp" />

                        <ImageView
                            android:id="@+id/checkdiSTAV"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/check"
                            app:tint="@color/text_primary"
                            android:visibility="gone"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginStart="60dp"
                        android:background="#38383A" />

                    <RelativeLayout
                        android:id="@+id/diAutoguidovie"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:paddingHorizontal="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:text="di Autoguidovie"
                            android:textColor="@color/text_primary"
                            android:textSize="17sp" />

                        <ImageView
                            android:id="@+id/checkdiAutoguidovie"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/check"
                            app:tint="@color/text_primary"
                            android:visibility="gone"/>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>