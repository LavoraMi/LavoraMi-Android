<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_app"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/lineDetailPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="18dp">

            <ImageButton
                android:id="@+id/buttonBack"
                android:layout_width="30dp"
                android:layout_height="27dp"
                android:layout_marginEnd="16dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/outline_arrow_back_ios_new_24"
                app:tint="@color/text_primary" />

            <TextView
                android:id="@+id/detBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="40dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:gravity="center"
                android:background="@drawable/bg_badge_line"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detTitolo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="15dp"
                android:text=""
                android:textColor="@color/text_primary"
                android:textSize="30sp"
                android:ellipsize="end"
                android:textStyle="bold"
                android:maxLines="1"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Direzioni:"
            android:textColor="@color/text_primary"
            android:textSize="15sp"
            android:layout_marginTop="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detDirezioni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtMinutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tempo di attesa:"
            android:textColor="@color/text_primary"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/txtInterscambio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fermata di interscambio:"
            android:textColor="@color/text_primary"
            android:textSize="25sp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/detInterscambio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:text=""
            android:textStyle="bold"
            android:visibility="gone"/>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupLinee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:chipSpacingHorizontal="6dp"
            app:chipSpacingVertical="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutSubInfo"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/detAttesa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:text=""
            android:textStyle="bold"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/lineLimitation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_primary"
            android:textSize="12sp"
            android:paddingTop="10dp"
            android:text="LA LINEA Ã‰ ATTIVA SOLO NEI GIORNI SETTIMANALI."
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stato linea"
            android:textColor="@color/text_primary"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detLavori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/detActionGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipMappa"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:text="Mappa"
                app:chipBackgroundColor="@color/selector_chip_filter"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipLavoriInCorso"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:text="Lavori in corso"
                app:chipBackgroundColor="@color/selector_chip_filter" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipInterscambi"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:text="Interscambi"
                app:chipBackgroundColor="@color/selector_chip_filter" />
        </com.google.android.material.chip.ChipGroup>

        <androidx.cardview.widget.CardView
            android:id="@+id/mapCard"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="#1C1C1E">

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/lavoriSezioneWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/lavoriNested"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:fillViewport="false">

                <LinearLayout
                    android:id="@+id/containerLavori"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/interscambiWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/interscambiNested"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:fillViewport="false">

                <LinearLayout
                    android:id="@+id/containerInterscambi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>

        <TextView
            android:id="@+id/emptyView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="Non ci sono lavori su questa linea."
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:alpha="0.7"
            android:fontFamily="sans-serif-medium"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>